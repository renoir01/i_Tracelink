# Africa's Talking API Configuration
# Copy this file to .env and add your actual credentials

# API Credentials
AFRICAS_TALKING_USERNAME=sandbox
AFRICAS_TALKING_API_KEY=your_api_key_here

# SMS Configuration
AFRICAS_TALKING_SENDER_ID=AFRICASTKNG

# Environment
ENVIRONMENT=development

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# MTN MoMo Configuration (Sandbox)
MTN_MOMO_API_KEY=your_mtn_api_key
MTN_MOMO_API_SECRET=your_mtn_api_secret
MTN_MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com
MTN_MOMO_CALLBACK_URL=https://your-domain.com/api/payments/mtn/callback
MTN_COLLECTION_ACCOUNT=your_collection_account

# Airtel Money Configuration (Sandbox)
AIRTEL_API_KEY=your_airtel_api_key
AIRTEL_API_SECRET=your_airtel_api_secret
AIRTEL_BASE_URL=https://openapiuat.airtel.africa
AIRTEL_CALLBACK_URL=https://your-domain.com/api/payments/airtel/callback
AIRTEL_COLLECTION_ACCOUNT=your_collection_account

# Email Service Configuration (SendGrid/Mailgun/SES)
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM_EMAIL=noreply@itracelink.rw
EMAIL_FROM_NAME=iTraceLink
EMAIL_TEMPLATE_DOMAIN=mg.itracelink.rw

# App Configuration
APP_NAME=iTraceLink
BASE_URL=https://your-domain.com
